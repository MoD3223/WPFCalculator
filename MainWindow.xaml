        <Button x:Name="btn8" Content="8" HorizontalAlignment="Left" Margin="115,70,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="Btn8_Click"/>
        <Button x:Name="btn7" Content="7" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="Btn7_Click"/>
        <Button x:Name="btn6" Content="6" HorizontalAlignment="Left" Margin="220,125,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="Btn6_Click"/>
        <Button x:Name="btn5" Content="5" HorizontalAlignment="Left" Margin="115,125,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="Btn5_Click"/>
        <Button x:Name="btn4" Content="4" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="Btn4_Click"/>
        <Button x:Name="btn3" Content="3" HorizontalAlignment="Left" Margin="220,180,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="Btn3_Click"/>
        <Button x:Name="btn2" Content="2" HorizontalAlignment="Left" Margin="115,180,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="Btn2_Click"/>
        <Button x:Name="btn1" Content="1" HorizontalAlignment="Left" Margin="10,180,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="Btn1_Click"/>
        <Button x:Name="btnEquals" Content="=" HorizontalAlignment="Left" Margin="220,235,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="BtnEquals_Click"/>
        <Button x:Name="btn0" Content="0" HorizontalAlignment="Left" Margin="115,235,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="Btn0_Click"/>
        <Button x:Name="btnDot" Content="," HorizontalAlignment="Left" Margin="10,235,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="BtnDot_Click"/>
        <Button x:Name="btnPlus" Content="+" HorizontalAlignment="Left" Margin="325,70,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="BtnPlus_Click"/>
        <Button x:Name="btnSub" Content="-" HorizontalAlignment="Left" Margin="325,125,0,0" VerticalAlignment="Top" Width="100" Height="50" FontSize="24" Click="BtnSub_Click"/>
